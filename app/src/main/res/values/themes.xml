<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- main -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- toolbar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarSize">@dimen/toolbar_height</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="BaseLoginTheme" parent="AppTheme">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:textColorHint">@color/text_primary_inverted_dim</item>
        <item name="colorControlNormal">@color/text_primary_inverted_dim</item>
        <item name="colorControlActivated">@color/text_primary_inverted</item>
        <item name="textColorError">@color/accent</item>
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="LoginTheme" parent="BaseLoginTheme">
    </style>

</resources>
